<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EPJ.Resources.Styles">

    <Color x:Key="BackgroundLight">#F2F2F2</Color>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>

    <Color x:Key="HoverLight">#DBDBDB</Color>
    <SolidColorBrush x:Key="HoverLightBrush" Color="{StaticResource HoverLight}"/>

    <Color x:Key="Foreground">#686868</Color>
    <SolidColorBrush x:Key="ForegroudBrush" Color="{StaticResource Foreground}"/>

    <Color x:Key="ForegroundDark">#000000</Color>
    <SolidColorBrush x:Key="ForegroudDarkBrush" Color="{StaticResource ForegroundDark}"/>

    <Color x:Key="ForegroundLight">#ffffff</Color>
    <SolidColorBrush x:Key="ForegroudLightBrush" Color="{StaticResource ForegroundLight}"/>

    <!-- Priority colours -->
    <Color x:Key="PriorityLow">#FFA800</Color>
    <Color x:Key="PriorityMedium">#FF6A00</Color>
    <Color x:Key="PriorityHigh">#701944</Color>
    <Color x:Key="PriorityDefault">#000000</Color>

</ResourceDictionary>