                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                       Margin="10">
                    <TextBlock x:Name="ProjectTitle" FontSize="20" Text="Project" FontWeight="Bold" Margin="10"/>
                    <TextBlock x:Name="SubmitionDate" Text="2019-10-24"
                               Margin="20 0 0 10"/>
